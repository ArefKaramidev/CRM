{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./src", // مسیر پایه را به `src` تغییر می‌دهیم
    "paths": {
      "*": ["*"] // تمام مسیرها را بدون تغییر پشتیبانی می‌کند
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
